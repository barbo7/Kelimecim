    <TabBar>
        <Tab Title="Çeviri">
            <ShellContent Title="Çeviri" StyleClass="MainPageFlyoutItem" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Egzersizler">
            <ShellContent Title="Kelime Çalış"  StyleClass="MainPageFlyoutItem" ContentTemplate="{DataTemplate local:KelimeCalismasi}" Route="KelimeCalismasi" />
            <ShellContent Title="Cümle Çalış"  StyleClass="MainPageFlyoutItem" ContentTemplate="{DataTemplate local:CumleCalismasi}" Route="CumleCalismasi" />
            <ShellContent Title="Çoktan Seçmeli"  StyleClass="MainPageFlyoutItem" ContentTemplate="{DataTemplate local:CoktanSecmeli}" Route="CoktanSecmeli" />
        </Tab>
        <Tab Title="Kelime Tekrar Listem">
            <ShellContent Title="Yeni Sayfa" ContentTemplate="{DataTemplate local:KelimeTekrar}" Route="KelimeTekrar" FlyoutItemIsVisible="False" />
        </Tab>

    </TabBar>


    <Shell.FlyoutFooter>

            <ImageButton
                BorderWidth="1"
                BorderColor="LightGray"
                Source="exit.png"
                Clicked="ExitButton_Clicked"
                HeightRequest="40"
                WidthRequest="400"
                ></ImageButton>
            
    </Shell.FlyoutFooter>

</Shell>
